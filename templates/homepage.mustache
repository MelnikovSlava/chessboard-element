    // prevent "browser drag" of the black king
    $('.hero-inner-556fe img').on('mousedown', function (evt) { evt.preventDefault() })

    // prevent hover problems on touch devices
    if (isTouchDevice()) {
      $('.navbar-a57cc').removeClass('hover-effect')
    }
  }

  $(document).ready(init)
})()
</script>
